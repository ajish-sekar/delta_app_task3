<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.pokedex.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter pokemon name"
                android:imeOptions="actionSearch"/>
            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="Error Message"
            android:textSize="20sp"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/title_poke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/poke_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Charmander"
                    android:textSize="18sp"
                    android:layout_marginRight="8dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/id_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="#4"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/title_poke"
                android:layout_marginLeft="16dp"
               android:scaleType="fitCenter"/>
            <RelativeLayout
                android:id="@+id/attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_poke"
                android:layout_toRightOf="@id/pic"
                android:layout_toEndOf="@id/pic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="24dp"
                android:background="#2196f3"
                android:padding="16dp">
                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:id="@+id/act_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/height"
                    tools:text="6'5''"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/height"
                    android:text="Weight"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="32dp"/>
                <TextView
                    android:id="@+id/act_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="85"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_below="@id/weight"
                    android:layout_toRightOf="@id/height"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/abilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abilities"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_below="@id/act_height"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:id="@+id/act_abilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Overblaze"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_below="@id/abilities"
                    android:layout_marginTop="6dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Types"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/attributes"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"/>
           <LinearLayout
               android:id="@+id/act_types"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_below="@id/types"
               android:paddingLeft="16dp">

           </LinearLayout>
            <LinearLayout
                android:id="@+id/stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/act_types"
                android:padding="16dp"
                android:background="#bdbdbd"

                android:layout_marginLeft="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stats"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HP :"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/hp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" 32"
                        android:textColor="#1565c0"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attack :"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/attack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" 32"
                        android:textColor="#1565c0"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Defense :"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/defence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" 32"
                        android:textColor="#1565c0"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Attack :"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/sp_attack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" 32"
                        android:textColor="#1565c0"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Defense :"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/sp_defence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" 32"
                        android:textColor="#1565c0"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed :"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" 32"
                        android:textColor="#1565c0"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
